<launch>
  <!-- start the joy driver -->
  <node pkg="joy" type="joy_node" name="joy_node" output="screen">
    <param name="dev"    value="/dev/input/js0"/>
    <param name="deadzone" value="0.05"/>
    <param name="autorepeat_rate" value="20"/>
  </node>

  <!-- start your joystickâ†’cmd_vel translator -->
  <node pkg="pez" type="joystick.py" name="joy_teleop" output="screen">
    <!-- optionally remap axes or scales here -->
    <param name="axis_forward" value="1"/>
    <param name="axis_turn"    value="0"/>
    <param name="axis_dive"    value="4"/>
    <param name="scale_forward" value="1.0"/>
    <param name="scale_turn"    value="1.0"/>
    <param name="scale_dive"    value="1.0"/>
  </node>
</launch>
